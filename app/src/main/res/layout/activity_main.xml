<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/primary"
   android:orientation="vertical"
   android:gravity="center"
   tools:context=".activities.MainActivity">

   <android.support.v7.widget.LinearLayoutCompat
      style="@style/MyLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/size_8"
      android:orientation="vertical">

      <android.support.v7.widget.AppCompatTextView
         style="@style/MyText.Big"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/qr"/>

      <android.support.v7.widget.LinearLayoutCompat
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/size_8"
         android:gravity="center"
         android:orientation="horizontal">

         <android.support.v7.widget.AppCompatButton
            android:id="@+id/acb_ReadQR"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="qrCodeReading"
            android:text="@string/read_qr"/>

         <android.support.v7.widget.AppCompatButton
            android:id="@+id/acb_ShowQR"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="showQr"
            android:text="@string/showQR"/>

      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.AppCompatTextView
         android:id="@+id/actv_QR_Result"
         style="@style/MyText"
         android:layout_width="match_parent"
         android:layout_height="@dimen/size_24"
         android:text="@string/resultFromReadQR"/>

   </android.support.v7.widget.LinearLayoutCompat>

   <android.support.v7.widget.LinearLayoutCompat
      style="@style/MyLayout"
      android:layout_marginLeft="@dimen/size_8"
      android:layout_marginRight="@dimen/size_8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <android.support.v7.widget.AppCompatTextView
         style="@style/MyText.Big"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/tracking"/>

      <android.support.v7.widget.LinearLayoutCompat
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/size_8"
         android:gravity="center"
         android:orientation="horizontal">

         <android.support.v7.widget.AppCompatButton
            android:id="@+id/acb_Start"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="startTracking"
            android:text="@string/startTracking"/>

         <android.support.v7.widget.AppCompatButton
            android:id="@+id/acb_Stop"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="stopTracking"
            android:text="@string/stopTracking"/>

      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.AppCompatTextView
         android:id="@+id/actv_GpsData"
         style="@style/MyText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/coordinates"/>

      <android.support.v7.widget.AppCompatTextView
         android:id="@+id/actv_GpsTime"
         style="@style/MyText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/time"/>

      <android.support.v7.widget.AppCompatTextView
         android:id="@+id/actv_GpsStatus"
         style="@style/MyText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/gpsStatus"/>

   </android.support.v7.widget.LinearLayoutCompat>

   <android.support.v7.widget.LinearLayoutCompat
      style="@style/MyLayout"
      android:layout_margin="@dimen/size_8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <android.support.v7.widget.AppCompatButton
         android:id="@+id/acb_TestConnection"
         style="@style/MyButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/connect"/>

      <android.support.v7.widget.AppCompatTextView
         android:id="@+id/actv_InetResult"
         style="@style/MyText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/connectionResult"/>

   </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>